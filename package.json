{
  "name": "vite-vue3-composition-js",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "style:fix": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "eslint:fix": "eslint src --ext .js,.vue --fix",
    "prettier:fix": "prettier --write ./src/**/*.{scss,js,json,vue}",
    "format:all": "npm run style:fix && npm run eslint:fix && npm run prettier:fix",
    "ls-lint": "ls-lint",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "commit": "git cz"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@ls-lint/ls-lint": "^1.11.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-scss": "^4.4.0",
    "vite": "^4.1.0"
  },
  "lint-staged": {
    "src/**/*.{scss,js,vue}": [
      "npm run format:all",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  }
}
